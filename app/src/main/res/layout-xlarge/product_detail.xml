<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f8fcf5"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/include" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/p_image"
                android:layout_width="match_parent"
                android:layout_height="660dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                android:layout_marginTop="1dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2">


                <TextView
                    android:id="@+id/p_name"
                    android:layout_width="600dp"
                    android:layout_height="60dp"

                    android:layout_weight="1"




                    android:gravity="center"

                    android:hint="Product Name"
                    android:background="@drawable/white_border"
android:layout_marginLeft="35dp"
                    android:textColor="#000"

                    android:textSize="25sp"
                    />

                <TextView


                    android:id="@+id/p_aval"
                    android:layout_width="610dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/p_name"
                    android:layout_weight="1"

                    android:background="@drawable/white_border"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:hint="Availability"

                    android:textColor="#000"
                    android:textSize="25sp"
                    />




            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_marginTop="15dp"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/p_disc"
        android:layout_width="1218dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/p_name"
        android:layout_below="@+id/p_name"
        android:layout_marginTop="5dp"

        android:layout_weight="1"


        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/white_border"
        android:hint="Description"
        android:textColor="#000"
        android:textSize="25sp"
        />

</LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    android:weightSum="2">

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="60dp"

                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
android:layout_weight="1"
                        android:background="@drawable/white_border"
                        android:layout_marginLeft="35dp"

android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Size"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000" />


                    <Spinner
                        android:id="@+id/spinner_size"
                        android:layout_width="170dp"


                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
android:layout_marginTop="3dp"
                        android:background="@drawable/white_border"
                        android:textSize="25sp"

                        android:layout_marginRight="25dp"                        android:textColor="#fff">

                    </Spinner>
                </LinearLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"

    android:id="@+id/linearLayout2">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="680dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"

                    android:background="@drawable/white_border"
                    android:gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="Color"
                    android:textSize="25sp"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/spinner_color"
                    android:layout_width="673dp"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#fff"
android:layout_marginLeft="10dp"
                    android:textSize="25sp"

                    android:layout_marginRight="25dp"
                    android:background="@drawable/white_border"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_weight="1"
                  />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qty"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_weight="1"
                    android:background="@drawable/white_border"
                    android:gravity="center"
                    android:layout_marginLeft="35dp"

                    android:textSize="25sp"
                    android:text="Quantity"

                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pedit"
                    android:layout_width="196dp"
                    android:layout_height="60dp"
android:layout_weight="1"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/qty"
                    android:background="@drawable/black_border"
                 android:paddingLeft="10dp"
                    android:hint="1"
                    android:textSize="25sp"

                    android:textColor="#fff"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="195dp"

                    android:layout_height="60dp"


                    android:layout_weight="1"
                    android:background="@drawable/white_border"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Original Price"
                    android:textColor="#000"

                    android:layout_marginLeft="35dp"
                    android:textSize="25sp"
                    android:textColorHint="#FFFF5656" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="185dp"
                    android:layout_height="60dp"


                    android:background="@drawable/black_border"


                    android:layout_weight="1"

                    android:layout_marginLeft="10dp"

                    android:text="Price"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    />

            </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:layout_marginTop="10dp"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/textView7"
        android:layout_width="720dp"

        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginBottom="4dp"

        android:layout_weight="1"
        android:background="@drawable/white_border"
        android:gravity="center"
        android:text="Discount"
        android:textColor="#000"
        android:textSize="25sp"

        android:layout_marginLeft="35dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/dprice"
        android:layout_width="700dp"
        android:layout_height="60dp"



        android:layout_weight="1"
        android:background="@drawable/black_border"
        android:paddingLeft="9dp"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="25dp"
        android:hint="N/A"
        android:textColor="#fff"
        android:textSize="40sp"
        />

</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/pbtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                   android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/black_border"
                    android:textSize="35sp"

                    android:gravity="center"
                    android:text="ADD TO CART"
                    android:textColor="#ffff" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>